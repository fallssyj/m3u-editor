<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  全局字体设置  -->
    <FontFamily x:Key="MiSansRegular">
        pack://application:,,,/m3u_editor;component/Assets/Fonts/MiSans-Normal.ttf#MiSans
    </FontFamily>



    <!--  全局字体样式 - 应用于所有Control（包括Button、TextBox等）  -->
    <Style TargetType="Control">
        <Setter Property="FontFamily" Value="{StaticResource MiSansRegular}" />
    </Style>
</ResourceDictionary>