<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CircleIconButton" TargetType="Button">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="40" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!--  圆形背景  -->
                        <!--<Ellipse x:Name="BackgroundEllipse" Fill="Transparent" />-->
                        <Border x:Name="bd" CornerRadius="5" />
                        <Path
                            x:Name="IconPath"
                            Width="20"
                            Height="20"
                            Data="{TemplateBinding Content}"
                            Fill="{DynamicResource PrimaryTextBrush}"
                            Stretch="Uniform" />

                    </Grid>

                    <!--  视觉状态触发器  -->
                    <ControlTemplate.Triggers>
                        <!--  鼠标悬停  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="{DynamicResource ThirdlyTextBrush}" />
                        </Trigger>


                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="bd" Property="Background" Value="Transparent" />
                        </Trigger>
                        <!--  按下状态  -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bd" Property="Opacity" Value="0.6" />
                        </Trigger>

                        <!--  禁用状态  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="IconPath" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>