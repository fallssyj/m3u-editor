<Application
    x:Class="m3u_editor.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:m3u_editor"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources RequestedTheme="Light" />
                <hc:Theme />
                <ResourceDictionary Source="Styles/Icons.xaml" />
                <ResourceDictionary Source="Styles/MainStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--  全局字体设置  -->
            <FontFamily x:Key="MiSansRegular">
                pack://application:,,,/m3u_editor;component/Assets/Fonts/MiSans-Normal.ttf#MiSans
            </FontFamily>

            <!--  全局字体样式 - 应用于所有TextBlock  -->
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontFamily" Value="{StaticResource MiSansRegular}" />
            </Style>

            <!--  全局字体样式 - 应用于所有Control（包括Button、TextBox等）  -->
            <Style TargetType="Control">
                <Setter Property="FontFamily" Value="{StaticResource MiSansRegular}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
