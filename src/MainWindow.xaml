<hc:Window
    x:Class="m3u_editor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:m3u_editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:m3u_editor.ViewModels"
    Title="{Binding AppTitle}"
    Width="1200"
    Height="800"
    MinWidth="800"
    MinHeight="600"
    Icon="/Assets/ICO/app.ico"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <hc:Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </hc:Window.Resources>
    <hc:Window.DataContext>
        <vm:MainViewModel />
    </hc:Window.DataContext>
    <hc:Window.NonClientAreaContent>
        <Grid>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="40"
                    BorderThickness="0"
                    Command="{Binding ChangeThemeCommand}">
                    <Path
                        Margin="1"
                        Data="{StaticResource Brightness6}"
                        Fill="{DynamicResource PrimaryTextBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="40"
                    BorderThickness="0"
                    Command="{Binding OpenGithubCommand}">
                    <Path
                        Margin="1"
                        Data="{StaticResource Github}"
                        Fill="{DynamicResource PrimaryTextBrush}"
                        RenderTransformOrigin="0.5,0.5"
                        Stretch="Uniform">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleY="-1" />
                        </Path.RenderTransform>
                    </Path>
                </Button>
                <Button
                    Width="40"
                    BorderThickness="0"
                    Command="{Binding OpenAboutCommand}">
                    <Path
                        Margin="1"
                        Data="{StaticResource Info}"
                        Fill="{DynamicResource PrimaryTextBrush}"
                        RenderTransformOrigin="0.5,0.5"
                        Stretch="Uniform">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleY="-1" />
                        </Path.RenderTransform>
                    </Path>
                </Button>
            </StackPanel>
        </Grid>

    </hc:Window.NonClientAreaContent>
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--  工具栏  -->
            <Border
                Margin="10,10,10,5"
                Padding="10"
                Background="{DynamicResource RegionBrush}"
                CornerRadius="10">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Command="{Binding LoadM3uCommand}"
                        Content="{StaticResource Folder}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="打开文件" />

                    <Button
                        Command="{Binding SaveM3uCommand}"
                        Content="{StaticResource ContentSaveAllOutline}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="保存文件" />

                    <Button
                        Command="{Binding MoveUpCommand}"
                        Content="{StaticResource ArrowUp}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="向上移动" />
                    <Button
                        Command="{Binding MoveDownCommand}"
                        Content="{StaticResource ArrowDown}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="向下移动" />
                    <Button
                        Command="{Binding InsertAfterCommand}"
                        Content="{StaticResource VectorPointPlus}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="添加" />
                    <Button
                        Command="{Binding DeleteCommand}"
                        Content="{StaticResource DeleteForeverOutline}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="删除" />
                    <Button
                        Command="{Binding ReloadJsonCommand}"
                        Content="{StaticResource CodeBlockBraces}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="导出JSON" />
                    <Button
                        Command="{Binding ReloadM3uCommand}"
                        Content="{StaticResource Autorenew}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="重载" />
                    <TextBlock
                        MaxWidth="200"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Opacity="0.5"
                        Text="{Binding SelectedFilePath, FallbackValue=尚未选择文件}"
                        TextTrimming="CharacterEllipsis" />
                    <Button
                        Margin="10,0,0,0"
                        Command="{Binding EditColumnsCommand}"
                        Content="{StaticResource PlaylistEdit}"
                        Style="{StaticResource CircleIconButton}"
                        ToolTip="编辑列" />
                    <ComboBox
                        Height="30"
                        MinWidth="100"
                        Margin="10,0,0,0"
                        ItemsSource="{Binding AvailableColumns}"
                        SelectedItem="{Binding SelectedSearchColumn}"
                        ToolTip="选择搜索列" />
                    <hc:TextBox
                        Width="200"
                        Height="30"
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Center"
                        hc:InfoElement.Placeholder="搜索..."
                        hc:InfoElement.ShowClearButton="True"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Border>
            <!--  内容区域  -->
            <Border
                Grid.Row="1"
                Margin="10,5,10,5"
                CornerRadius="10">
                <DataGrid
                    AutoGenerateColumns="True"
                    BorderThickness="0"
                    CanUserAddRows="False"
                    EnableRowVirtualization="True"
                    HeadersVisibility="All"
                    IsReadOnly="False"
                    ItemsSource="{Binding ChannelTable}"
                    RowHeight="60"
                    SelectedItem="{Binding SelectedRow, Mode=TwoWay}"
                    SelectionMode="Extended"
                    SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="150"
                            DisplayIndex="0"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image
                                        HorizontalAlignment="Center"
                                        Source="{Binding [tvg-logo]}"
                                        Stretch="Uniform" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn DisplayIndex="1" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="10,0,0,0"
                                        Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="{StaticResource Play}"
                                        Style="{StaticResource CircleIconButton}"
                                        ToolTip="播放" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Border>
            <!--  状态栏  -->
            <Border
                Grid.Row="2"
                Margin="10,5,10,5"
                Padding="10"
                Background="{DynamicResource RegionBrush}"
                CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Path
                            Data="{StaticResource Info16}"
                            Fill="{DynamicResource PrimaryTextBrush}"
                            Stretch="Uniform" />
                        <TextBlock
                            Margin="5,2,0,0"
                            VerticalAlignment="Center"
                            Text="{Binding StatusMessage}" />
                    </StackPanel>

                </Grid>
            </Border>
        </Grid>
    </Border>
</hc:Window>
