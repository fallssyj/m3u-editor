<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Background Colors  -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#1e1e1e" />
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#3d3d3d" />

    <!--  Primary Colors  -->
    <SolidColorBrush x:Key="PrimaryBlueColor" Color="#5B7FFF" />
    <SolidColorBrush x:Key="PrimaryGrayColor" Color="#3d3d3d" />

    <!--  Secundary Colors  -->
    <SolidColorBrush x:Key="SecundaryBlueColor" Color="#CEE8FB" />
    <SolidColorBrush x:Key="SecundaryGrayColor" Color="#EEEEEE" />

    <!--  Typograhy Colors  -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#f3f3f3" />
    <SolidColorBrush x:Key="TextSecundaryColor" Color="#434344" />

    <!--  Icons Colors  -->
    <SolidColorBrush x:Key="ActionIconColor" Color="#f3f3f3" />

</ResourceDictionary>